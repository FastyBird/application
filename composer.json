{
  "name" : "fastybird/bootstrap",
  "type" : "library",
  "description" : "Extended application bootstrap with implemented console & logger support & basic commands",
  "keywords" : [
    "fastybird",
    "fb",
    "libs",
    "library",
    "bootstrap",
    "nette"
  ],

  "homepage" : "https://www.fastybird.com",

  "license" : "Apache-2.0",

  "authors" : [
    {
      "name" : "FastyBird s.r.o.",
      "email" : "code@fastybird.com",
      "homepage" : "https://www.fastybird.com"
    },
    {
      "name" : "Adam Kadlec",
      "email" : "adam.kadlec@fastybird.com"
    }
  ],

  "support" : {
    "email" : "code@fastybird.com",
    "issues" : "https://github.com/FastyBird/bootstrap/issues",
    "source" : "https://github.com/FastyBird/bootstrap"
  },

  "prefer-stable" : true,

  "minimum-stability" : "stable",

  "require" : {
    "php" : ">=8.1.0",
    "contributte/console" : "^0.9",
    "contributte/monolog" : "^0.5",
    "cweagans/composer-patches" : "^1.7",
    "mangoweb/monolog-tracy-handler" : "^1.0",
    "nette/bootstrap" : "^3.1",
    "nette/di" : "^3.0",
    "nette/utils" : "^3.2",
    "sentry/sdk" : "^3.1",
    "vlucas/phpdotenv" : "^5.4"
  },

  "require-dev" : {
    "doctrine/orm" : "^2.8",
    "mockery/mockery" : "^1.4",
    "ninjify/nunjuck" : "^0.3",
    "orisai/coding-standard" : "^3.2",
    "pds/skeleton" : "^1.0",
    "php-parallel-lint/php-parallel-lint" : "^1.3",
    "phpstan/extension-installer" : "^1.1",
    "phpstan/phpstan" : "^1.3",
    "phpstan/phpstan-deprecation-rules" : "^1.0",
    "phpstan/phpstan-nette" : "^1.0",
    "phpstan/phpstan-strict-rules" : "^1.1",
    "tracy/tracy" : "^2.9"
  },

  "autoload" : {
    "psr-4" : {
      "FastyBird\\Bootstrap\\" : "src/"
    }
  },

  "autoload-dev" : {
    "psr-4" : {
      "Tests\\Cases\\" : "tests/cases",
      "Tests\\Fixtures\\" : "tests/fixtures"
    }
  },

  "config" : {
    "sort-packages" : true,
    "allow-plugins" : {
      "dealerdirect/phpcodesniffer-composer-installer" : true,
      "cweagans/composer-patches" : true,
      "phpstan/extension-installer" : true
    }
  },

  "bin" : [
    "bin/fb-console",
    "bin/fb-console.php",
    "bin/fb-supervisor",
    "bin/fb-supervisor.php"
  ],

  "extra" : {
    "patches" : {
      "nette/utils" : {
        "Bug: Offset check with null support" : "https://raw.githubusercontent.com/FastyBird/libraries-patches/master/nette.array.offsetCheck.diff"
      }
    }
  }
}
